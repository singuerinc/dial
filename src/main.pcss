@tailwind base;
@tailwind components;
@tailwind utilities;

html {
  font-family: "Roboto", sans-serif;
}

body {
  @apply text-oc-gray-200 bg-oc-gray-1000;
}

.hn__btn {
  @apply text-xs text-oc-gray-600;
  &:hover {
    @apply underline text-oc-gray-300;
  }
}

.search__input {
  @apply w-full bg-transparent border-4 border-gray-800 px-2 text-4xl -mx-2 my-2 font-light;
  &:focus {
    @apply border-oc-orange-700 outline-none;
  }
}

.search__link {
  @apply text-xl leading-snug;
  &:hover {
    @apply text-oc-orange-700;
  }
  &:focus {
    @apply text-oc-orange-700 outline-none;
  }
}

